### 核心架构配置 ###
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

### 极致编译优化 ###
CONFIG_CPU_MITIGATIONS=n
CONFIG_CC_OPTIMIZE_FOR_PERFORMANCE=y
CONFIG_KERNEL_CLANG_LLVM=y
CONFIG_USE_LLD=y
CONFIG_LLVM_POLLY=y

### J4125专属调度优化 ###
CONFIG_SCHED_BMQ=y
CONFIG_SCHED_MC_PRIO=y
CONFIG_PREEMPT_RT=y
CONFIG_PREEMPT_VOLUNTARY=n
CONFIG_HZ=1000
CONFIG_NO_HZ_FULL=y
