CONFIG_PAGE_POISONING=y
CONFIG_INIT_ON_ALLOC_DEFAULT_ON=y
CONFIG_DAMON=y
CONFIG_DAMON_VADDR=y
CONFIG_DAMON_PADDR=y
CONFIG_IDLE_PAGE_TRACKING=y

