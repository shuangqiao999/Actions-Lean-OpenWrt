# ======================
# 基础架构与固件配置
# ======================
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_GENERIC=y
CONFIG_TARGET_KERNEL_PARTSIZE=32
CONFIG_TARGET_ROOTFS_PARTSIZE=944
CONFIG_GRUB_EFI_IMAGES=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y

# ======================
# 工具链与编译优化
# ======================
CONFIG_KERNEL_CLANG_LLVM=y
CONFIG_LLVM_TARGET_ARCH="x86-64-v2"
CONFIG_USE_LLD=y
CONFIG_LTO_CLANG_THIN=y
CONFIG_KERNEL_LTO_CLANG_THIN=y
CONFIG_CC_OPTIMIZE_FOR_PERFORMANCE=y
CONFIG_KERNEL_OPTIMIZE_O3=y
CONFIG_OPTIMIZE_INLINING=y
CONFIG_GCC_OPTIMIZE_CPU_NATIVE=y
CONFIG_LLVM_DISTRIBUTION_COMPONENTS="clang;lld;llvm-objcopy"

# ======================
# 安全增强特性
# ======================
CONFIG_STRICT_KERNEL_RWX=y
CONFIG_HARDENED_USERCOPY=y
CONFIG_STACKPROTECTOR_STRONG=y
CONFIG_STATIC_USERMODEHELPER=y
CONFIG_ZERO_CALL_USED_REGS=y
CONFIG_CRYPTO_DEV_PADLOCK_AES=y
CONFIG_CRYPTO_DEV_PADLOCK_SHA=y

# ======================
# 硬件特定优化 (Intel J4125)
# ======================
CONFIG_PREEMPT_DYNAMIC=y
CONFIG_PREEMPT=y
CONFIG_HIGH_RES_TIMERS=y
CONFIG_HZ=1000
CONFIG_INTEL_EPB=y
CONFIG_INTEL_PSTATE=y
CONFIG_INTEL_PSTATE_HWP=y
CONFIG_CPU_FREQ_DEFAULT_GOV_PERFORMANCE=y
CONFIG_CPU_FREQ_GOV_PERFORMANCE=y
CONFIG_CRYPTO_AES_NI_INTEL=y

# ======================
# 内存管理优化 (8GB专用)
# ======================
CONFIG_TRANSPARENT_HUGEPAGE_MADVISE=y
CONFIG_LRU_GEN=y
CONFIG_LRU_GEN_ENABLED=y
CONFIG_LRU_GEN_WALKS_MMU=y
CONFIG_INIT_ON_ALLOC_DEFAULT_ON=y
CONFIG_SLUB=y
CONFIG_SLUB_CPU_PARTIAL=y
CONFIG_SLAB_FREELIST_RANDOM=y
CONFIG_SLAB_FREELIST_HARDENED=y

# ======================
# 网络协议栈优化 (64字节线速)
# ======================
CONFIG_TCP_NO_TSQ=y
CONFIG_NET_FLOW_LIMIT=y
CONFIG_TCP_CONG_BBR3=y
CONFIG_TCP_ZERO_COPY_RECEIVE=y
CONFIG_DEFAULT_FQ_CODEL=y
CONFIG_NET_SCH_TAPRIO=y
CONFIG_NET_NS_DELAYED=y
CONFIG_RPS=y
CONFIG_RFS_ACCEL=y
CONFIG_XPS=y
CONFIG_XPS_DEFAULT_QUEUES=4

# ======================
# Netfilter配置
# ======================
CONFIG_NF_CONNTRACK=y
CONFIG_NF_NAT=y
CONFIG_NF_NAT_MASQUERADE=y
CONFIG_NETFILTER_FLOW_OFFLOAD=y
CONFIG_NETFILTER_XT_TARGET_FLOWOFFLOAD=y
CONFIG_NF_TABLES=y
CONFIG_NF_TABLES_NETDEV=y
CONFIG_NF_FLOW_TABLE=y
CONFIG_NF_FLOW_TABLE_HW=y

# ======================
# 网卡驱动优化 (Intel I226)
# ======================
CONFIG_IGC=y
CONFIG_IGC_DIM=y
CONFIG_IGC_TSN=y
CONFIG_IGC_TAPRIO=y
CONFIG_IGC_QUEUES=4
CONFIG_IGC_RX_NAPI=y
CONFIG_IGC_TX_NAPI=y
CONFIG_IGC_GSO=y
CONFIG_IGC_GRO=y
CONFIG_IGC_TSO=y
CONFIG_IGC_RX_COPYBREAK=256

# ======================
# 中断与队列优化
# ======================
CONFIG_PCI_MSI=y
CONFIG_IRQ_AFFINITY_HINT=y
CONFIG_IRQ_POLL=y
CONFIG_GENERIC_IRQ_IPI=y
CONFIG_IRQ_TIME_ACCOUNTING=y

# ======================
# 内核模块配置
# ======================
CONFIG_PACKAGE_kmod-sched-core=y
CONFIG_PACKAGE_kmod-sched-cake=y
CONFIG_PACKAGE_kmod-ifb=y
CONFIG_PACKAGE_kmod-tcp-bbr=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-netdev=y
CONFIG_PACKAGE_kmod-nft-offload=y
CONFIG_PACKAGE_kmod-nf-flow=y
CONFIG_PACKAGE_kmod-nf-flowoffload=y

# ======================
# 用户态工具与库
# ======================
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_irqbalance=y
CONFIG_PACKAGE_ethtool=y
CONFIG_PACKAGE_iperf3=y

# ======================
# IPv6支持
# ======================
CONFIG_IPV6_ROUTER_PREF=y
CONFIG_IPV6_MULTIPLE_TABLES=y
CONFIG_IPV6_OPTIMISTIC_DAD=y

# ======================
# LuCI应用配置
# ======================
CONFIG_PACKAGE_luci-app-arpbind=y
CONFIG_PACKAGE_luci-app-diskman=y
CONFIG_PACKAGE_luci-app-oaf=y
CONFIG_PACKAGE_luci-app-filemanager=y
CONFIG_PACKAGE_luci-app-irqbalance=y

