CONFIG_LRU_GEN=y
CONFIG_LRU_GEN_ENABLED=y
CONFIG_LRU_GEN_WALKS_MMU=y
CONFIG_COMPACTION=y
CONFIG_ZSWAP=y
CONFIG_ZSWAP_COMPRESSOR=lz4
