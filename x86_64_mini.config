### 核心架构配置 ###
CONFIG_TARGET_x86=y
CONFIG_TARGET_x86_64=y
CONFIG_TARGET_x86_64_DEVICE_generic=y

### 编译优化 ###
CONFIG_CPU_MITIGATIONS=n
CONFIG_CC_OPTIMIZE_FOR_PERFORMANCE=y
CONFIG_KERNEL_CLANG_LLVM=y
CONFIG_USE_LLD=y
